set.seed(2195)  
pi.j<-c(0.25, 0.35, 0.2, 0.1, 0.1)
n.j<-rmultinom(n = 1, size = 1000, prob = pi.j)
data.frame(n.j, pihat.j = n.j/1000, pi.j)

set.seed(9182)
n.j<-rmultinom(n = 5, size = 1000, prob = pi.j)
n.j
n.j/1000

set.seed(7812)
save2<-rmultinom(n = 1000, size = 1, prob = c(0.25, 0.35, 0.2, 0.1, 0.1))
save2[1:5,1:3] 
